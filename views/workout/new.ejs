    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= title %> </title>

    <script>
        const exercisesObject = {
        'Back': ['Barbell Row', 'Pull Up', 'Lat Pulldown', 'Seated Row'],
        'Biceps': ['Bicep Curl', 'Hammer Curl', 'Preacher Curl'],
        'Triceps': ['Tricep Extension', 'Skullcrusher', 'Tricep Dip'],
        'Shoulders': ['Shoulder Press', 'Lateral Raise'],
        'Chest': ['Bench Press', 'Chest Fly', 'Push Up'],
        'Legs': ['Squat', 'Deadlift', 'Hip Thrust', 'Lunge'],
        'Abs': ['Sit Up'],
        'Cardio': ['Running', 'Stairmaster', 'Walking', 'Jump Rope']
        }

    window.onload = function() {
        let bodyPart = document.getElementById('bodyPart');
        let exerciseOp = document.getElementById('exercise');

        for (const x in exercisesObject) {
            bodyPart.options[bodyPart.options.length] = new Option(x,x); // creates new option element with displayed text "x" and a value of "x"
        }

        bodyPart.onchange=function() {
            exerciseOp.length=1; // keeps exercise section clear until we choose
            const y = exercisesObject[bodyPart.value]; // y is the array corresponding to the value of the body part you chose
            for (let i=0; i<y.length; i++) {
                exerciseOp.options[exerciseOp.options.length] = new Option(y[i], y[i]);
                }
            }
        }
    </script>
